<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/dialog_about_layout_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" >

            <ImageView
                android:id="@+id/dialog_about_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/icon"
                android:padding="5dp"
                android:src="@drawable/icon" />

            <LinearLayout
                android:id="@+id/dialog_about_layout_title_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/dialog_about_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/dialog_about_layout_author"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_author"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_version"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dialog_about_build_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_build_date"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dialog_about_unrar_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_unrar_version"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dialog_about_translator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_translator"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <TextView
            android:id="@+id/dialog_about_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/about_support"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColorLink="@android:color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/contributors_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contributors_label"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/contributors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contributors"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/dialog_about_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/about_license"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/licenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/licenses_waiting"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp"
            android:typeface="monospace" />

    </LinearLayout>

</ScrollView>